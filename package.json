{
  "name": "brainfreeze",
  "version": "0.1.0",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "memory": "bun run src/cli/index.ts",
    "init": "bun run src/cli/index.ts init",
